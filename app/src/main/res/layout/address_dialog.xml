<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/address_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/address_contact_image_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/address_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/address_content_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumnarunpend"
                    android:textColor="@color/weak_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_phoneNumber"
                    android:textSize="13sp"
                    android:fontFamily="@font/nanumnarunpend"
                    android:textColor="@color/weak_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_group"
                    android:textSize="13sp"
                    android:fontFamily="@font/nanumnarunpend"
                    android:textColor="@color/weak_black" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_email"
                android:textSize="13sp"
                android:fontFamily="@font/nanumnarunpend"
                android:textColor="@color/weak_black" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
